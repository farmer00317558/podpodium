{
  "compilerOptions": {
    "target": "es6",
    "lib": ["DOM", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "exclude": ["node_modules", "lib", "**/*/*.test.ts"]
}
